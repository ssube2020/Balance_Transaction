@model IEnumerable<Balance_Transaction.Models.Transaction>;


<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-lg-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"> ტრანზაქციების ისტორია: @ViewBag.person.Name  @ViewBag.person.Surname </h4>
                        <div class="table-responsive">

                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th> ტიპი </th>
                                        <th> თარიღი </th>
                                        <th> რაოდენობა </th>
                                    </tr>
                                </thead>
                                <tbody>
                                        @foreach (var item in @ViewBag.data ) {

                                            <tr>
                                                <td> @item.TransactionType </td>
                                                <td>  @item.Date  </td>   
                                                @if(@item.TransactionType == "გადარიცხვა")
                                                {
                                                <td class="text-danger" style="font-weight: 700;">  -@item.Amount$ </td>
                                            } else
                                            {
                                               <td class="text-danger" style="font-weight: 700;">  +@item.Amount$ </td> 
                                            }
                                            </tr>

                                        }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>