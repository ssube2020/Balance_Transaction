@model IEnumerable<Balance_Transaction.Models.Transaction>;

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">
}


<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-lg-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"> ტრანზაქციების ისტორია: @ViewBag.person.Name  @ViewBag.person.Surname </h4>
                        <div class="table-responsive">

                            <table id="example" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th> ტიპი </th>
                                        <th> თარიღი </th>
                                        <th> რაოდენობა </th>
                                    </tr>
                                </thead>
                                <tbody>
                                        @foreach (var item in @ViewBag.data ) {

                                        <tr>
                                            <td> 
                                                @if (@item.TransactionType == "ჩარიცხვა")
                                                {
                                                    <p class="text-success"> @item.TransactionType </p>
                                                } else
                                                {
                                                    <p class="text-danger"> @item.TransactionType </p>
                                                }
                                            </td>
                                            <td>  @item.Date  </td>
                                            @if(@item.TransactionType == "ჩარიცხვა")
                                            {
                                                <td> <p class="text-success" style="font-weight:700;">  +@item.Amount </p>  </td>
                                            } else
                                            {
                                                <td> <p class="text-danger" style="font-weight:700;">  -@item.Amount </p>  </td>
                                            }

                                         </tr>

                                        }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div


@section Scripts{
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js"></script>
<script>

    $(document).ready(function() {

        $("#example").DataTable();

    });

</script>


}









